[user]
  name = Sebastian Klatt
  email = sebastian@markow.org
  signingkey = EF08BEA6

[github]
  user = sebastianmarkow

[core]
  editor = vim
  pager = less -R
  excludesfile = ~/.gitignore-global
  whitespace = trailing-space,space-before-tab,blank-at-eof

[push]
  default = nothing

[merge]
  conflictstyle = diff3
  tool = fugitive

[mergetool]
  keepTemporaries = false
  keepBackup = false
  prompt = false

[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"

[mergetool "kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true

[diff]
  tool = kaleidoscope

[difftool]
  prompt = false

[difftool "kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[log]
  abbrevCommit = true
  decorate = short
  date = local

[advice]
  statusHints = false

[color]
  ui = true

[alias]
  edit-config = config --global -e
  tig = !tig

  s = status
  sb = status -s -b

  sa = stash apply
  sc = stash clear
  sd = stash drop
  sl = stash list
  sp = stash pop
  ss = stash save
  sw = stash show

  d = diff
  dc = diff --cached
  dt = difftool
  dtc = difftool --cached
  last = diff HEAD^

  c = commit
  cm = commit -m
  ca = commit -am
  cd = commit --amend
  cs = commit -S -m

  a = add
  aa = add .
  ai = add -i
  ap = add --patch

  b = branch
  br = branch -r
  ba = branch -a
  bd = branch -d
  bv = branch -v

  co = checkout
  cb = checkout -b

  cp = cherry-pick -x

  compare = diff HEAD..master

  f = fetch
  fo = fetch origin

  grep-group = grep --break --heading --line-number

  l = log --graph
  lb = log --graph --all
  ll = log --unified
  lc = log --graph --name-status
  changelog = log --pretty=format:\"- %s\"
  filelog = log -u
  today = log --graph --since=1.day --relative-date
  stats = log --stat
  added-file = log --diff-filter=A

  m = merge
  ma = merge --abort
  mc = merge --continue
  ms = merge --skip
  mt = mergetool

  pl = pull
  plo = pull origin
  pb = pull --rebase

  p = push
  po = push origin
  pf = push -f

  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rbs = rebase --skip

  r = remote
  ra = remote add
  rm = remote rm
  rv = remote -v
  rs = remote show
  rp = remote prune
  re = reset

  unstage = reset HEAD
  uncommit = reset --soft HEAD^

  t = tag -n
