[user]
  name = Sebastian Klatt
  email = sebastian@markow.org
  signingkey = EF08BEA6

[github]
  user = sebastianmarkow

[core]
  editor = vim
  pager = less -R
  excludesfile = ~/.gitignore-global
  whitespace = trailing-space,space-before-tab,blank-at-eof

[commit]
  template = ~/.gitmessage

[push]
  default = nothing

[pull]
  rebase = true

[merge]
  ff = false
  conflictstyle = diff3
  tool = vimdiff

[mergetool]
  keepTemporaries = false
  keepBackup = false
  prompt = false

[mergetool "vimdiff"]
  prompt = false

[mergetool "kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true

[diff]
  tool = vimdiff

[difftool]
  prompt = false

[difftool "vimdiff"]
  prompt = false

[difftool "kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[log]
  abbrevCommit = true
  decorate = short
  date = local

[advice]
  statusHints = false

[help]
  autocorrect = 1

[color]
  ui = true

[apply]
  whitespace = fix

[alias]
  edit-config = config --global -e
  tig = !tig

  s = status
  sb = status -s -b
  ignored = status --ignored

  sa = stash apply
  sc = stash clear
  sd = stash drop
  sl = stash list
  sp = stash pop
  ss = stash save
  sw = stash show

  d = diff
  dc = diff --cached
  ds = diff --staged
  dt = difftool
  dtc = difftool --cached
  dts = difftool --staged
  last = diff -R HEAD^

  c = commit -S
  ca = commit -S -a
  cd = commit -S --amend

  a = add
  ai = add -i
  ap = add --patch

  b = branch
  br = branch -r
  ba = branch -a
  bd = branch -d
  bv = branch -v

  co = checkout
  cb = checkout -b

  cp = cherry-pick -x

  compare = diff HEAD..master

  f = fetch
  fa = fetch --all

  grep-group = grep --break --heading --line-number

  l = log --graph --oneline
  la = log --graph --oneline --all
  ll = log --unified
  lc = log --graph --name-status
  local = log --branches --not --remotes
  file-added = log --diff-filter=A
  file-log = log -u
  changelog = log --pretty=format:\"- %s\"
  today = log --graph --since=1.day --relative-date
  last-week = log --graph --since=1.week --relative-date
  stats = log --stat
  contrib = shortlog -s -n

  m = merge
  ma = merge --abort
  mc = merge --continue
  ms = merge --skip
  mt = mergetool

  pl = pull
  pla = pull --all

  p = push

  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rbs = rebase --skip

  r = remote
  ra = remote add
  rm = remote rm
  rv = remote -v
  rs = remote show
  rp = remote prune
  re = reset

  unstage = reset HEAD
  uncommit = reset --soft HEAD^

  t = tag -n
