[user]
  name = Sebastian Klatt
  email = sebastian@markow.org

[core]
  editor = vim
  pager = less -R
  excludesfile = ~/.gitignore-global

[advice]
  statusHints = false

[push]
  default = current

[apply]
  whitespace = fix,trailing-space,space-before-tab

[diff]
  algorithm = patience

[merge]
  tool = fugitive

[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"

[mergetool "kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true

[difftool "kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"

[log]
  date = short

[format]
  pretty = format:%C(blue)%h%C(magenta)%d%Creset %s %C(cyan)%cn%Creset %C(yellow)%cr 

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  ui = auto

[color "branch"]
  current = green
  local = normal
  remote = red
  plain = normal

[color "diff"]
  plain = normal
  meta = normal
  frag = cyan reverse
  func = cyan ul
  old = red
  new = green
  commit = yellow
  whitespace = normal red

[color "status"]
  header = normal
  added = green
  changed = red
  untracked = red
  nobranch = red

[alias]
  s = status
  sb = status -s -b

  sa = stash apply
  sc = stash clear
  sd = stash drop
  sl = stash list
  sp = stash pop
  ss = stash save
  sw = stash show

  d = diff
  dc = diff --cached
  dt = difftool
  dtc = difftool --cached
  last = diff HEAD^

  c = commit
  ca = commit -am
  cd = commit --amend

  a = add
  aa = add .
  ai = add -i
  ap = add --patch

  co = checkout
  cb = checkout -b
  unchunk = checkout -b

  b = branch
  br = branch -r
  ba = branch -a
  bd = branch -d
  bv = branch -v

  f = fetch
  fo = fetch origin

  l = log --graph
  ll = log --unified
  lc = log --graph --name-status
  changelog = log --pretty=format:\" * %s\"
  filelog = log -u
  today = log --graph --since=1.day
  stats = log --stat --abbrev-commit

  m = merge
  ma = merge --abort
  mc = merge --continue
  ms = merge --skip
  mt = mergetool

  p = push
  po = push origin
  pf = push -f

  pl = pull
  plo = pull origin
  pb = pull --rebase

  rb = rebase
  rba = rebase --abort
  rbc = rebase --continue
  rbi = rebase --interactive
  rbs = rebase --skip

  re = reset
  unstage = reset HEAD
  uncommit = reset --soft HEAD^

  r = remote
  ra = remote add
  rm = remote rm
  rv = remote -v
  rs = remote show
  rp = remote prune

  cp = cherry-pick -x

  t = tag -n

