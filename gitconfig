[user]
    name = Sebastian Klatt
    email = sebastian@markow.io
    signingkey = EF08BEA6

[core]
    editor = nvim
    pager = less -R
    excludesfile = ~/.gitignore
    whitespace = trailing-space,space-before-tab,blank-at-eof
    trustctime = false
    precomposeunicode = false

[commit]
    gpgsign = true
    template = ~/.gitmessage

[push]
    default = nothing

[pull]
    rebase = true

[rebase]
    autosquash = true

[merge]
    ff = true
    conflictstyle = diff3
    tool = fugitive

[mergetool "vimdiff"]
    prompt = false

[mergetool "fugitive"]
    prompt = false
    cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"

[diff]
    tool = vimdiff
    renames = copies

[difftool "vimdiff"]
    prompt = false
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[log]
    abbrevCommit = true
    decorate = short
    date = local

[pretty]
    default = "format:%Cgreen%h%Creset %<(52,trunc)%s  %cn %ar %Cred%d%Creset"
    changelog = "format:* %s"

[advice]
    statusHints = false

[help]
    autocorrect = 1

[color]
    ui = true

[apply]
    whitespace = fix

[alias]
    edit = config --global -e

    contributers = authors --list

    s = status -s -u

    d = diff
    ds = diff --staged
    staged = diff --staged
    dt = difftool
    dts = difftool --staged
    last = diff -R HEAD..HEAD^

    c = commit
    amend = commit --amend

    a = add
    patch = add --patch
    statch = stash --patch

    b = branch
    list = branch -a
    branches = branch -a
    delete = branch -d

    co = checkout
    new = checkout -b
    discard = checkout --

    cp = cherry-pick -x

    log-compare = log --graph --pretty=default master..HEAD
    compare = diff master..HEAD
    changes = diff --stat

    f = fetch
    fa = fetch --all

    grep-group = grep --break --heading --line-number

    l = log --graph --pretty=default
    ll = log --unified
    lc = log --graph --name-status
    local = log --branches --not --remotes
    file-added = log --diff-filter=A
    file-log = log -u
    logbook = log --pretty=changelog
    overview = log --graph -10 --branches --remotes --tags --pretty=default --date-order
    unmerged = log --no-merges master..

    tracked = ls-files
    untracked = ls-files --others --exclude-standard
    ignored = ls-files --others --exclude-standard --ignored

    m = merge
    mt = mergetool

    pl = pull
    pla = pull --all

    p = push

    rb = rebase
    rbi = rebase --interactive

    r = remote

    re = reset
    forgive = revert -n HEAD --
    unstage = reset -q HEAD --
    uncommit = reset --mixed HEAD~

    stashed = stash list

    t = tag -n

[url "git@github.com:"]
    insteadOf = "gh:"
    insteadOf = "github:"
    pushInsteadOf = "https://github.com/"

[github]
    user = sebastianmarkow

[ghq]
    root = ~/Developer/repos
    root = ~/Developer/go/src
