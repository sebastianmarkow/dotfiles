    email = sebastian@markow.io
    signingkey = EF08BEA6

[core]
    editor = vim
    pager = less -R
    excludesfile = ~/.gitignore
    whitespace = trailing-space,space-before-tab,blank-at-eof
    trustctime = false
    precomposeunicode = false

[commit]
    gpgsign = true
    template = ~/.gitmessage

[push]
    default = nothing

[pull]
    rebase = true

[rebase]
    autosquash = true

[merge]
    summary = true
    log = true
    ff = false
    conflictstyle = diff3
    tool = fugitive

[mergetool "vimdiff"]
    prompt = false

[mergetool "fugitive"]
    prompt = false
    cmd = vim -f -c \"Gvdiff\" \"$MERGED\"

[diff]
    tool = vimdiff
    renames = copies

[difftool "vimdiff"]
    prompt = false

[log]
    abbrevCommit = true
    decorate = short
    date = local

[advice]
    statusHints = false

[help]
    autocorrect = 1

[color]
    ui = true

[apply]
    whitespace = fix

[alias]
    edit = config --global -e

    s = status -s -u
    ignored = status -s --ignored

    sa = stash apply
    sc = stash clear
    sd = stash drop
    sl = stash list
    sp = stash pop
    ss = stash save
    sw = stash show

    d = diff
    dw = diff --color-words
    dc = diff --cached
    dcw = diff --cached --color-words
    ds = diff --staged
    dsw = diff --staged --color-words
    dt = difftool
    dcs = difftool --cached
    dst = difftool --staged
    last = diff --color-words -R HEAD..HEAD^

    c = commit
    ca = commit -a
    cd = commit --amend

    a = add
    ai = add -i
    ap = add --patch

    b = branch
    br = branch -r
    ba = branch -a
    bd = branch -d
    bv = branch -v

    co = checkout
    cob = checkout -b

    cp = cherry-pick -x

    compare = diff master..HEAD
    changes = diff --stat

    f = fetch
    fa = fetch --all

    grep-group = grep --break --heading --line-number

    l = log --graph --pretty=format:'%C(red)%h%C(reset) %C(cyan)%d%C(reset) %s  %C(magenta)%cn%C(reset) %C(blue)%ar%C(reset)'
    la = log --graph --all --pretty=format:'%C(red)%h%C(reset) %C(cyan)%d%C(reset) %s  %C(magenta)%cn%C(reset) %C(blue)%ar%C(reset)'
    ll = log --unified
    lc = log --graph --name-status
    local = log --branches --not --remotes
    file-added = log --diff-filter=A
    file-log = log -u

    m = merge
    ma = merge --abort
    mc = merge --continue
    ms = merge --skip
    mt = mergetool

    pl = pull
    pla = pull --all

    p = push

    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    rbi = rebase --interactive
    rbs = rebase --skip

    r = remote
    ra = remote add
    rm = remote rm
    rv = remote -v
    rs = remote show
    rp = remote prune
    re = reset

    unstage = reset HEAD
    uncommit = reset --soft HEAD^

    t = tag -n

[url "git@github.com:"]
    insteadOf = "gh:"
    insteadOf = "github:"
    pushInsteadOf = "https://github.com/"

