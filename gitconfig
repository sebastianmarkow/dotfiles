[user]
    name = Sebastian Klatt
    email = sebastian@markow.io
    signingkey = EF08BEA6

[core]
    editor = nvim
    pager = less -R
    excludesfile = ~/.gitignore
    whitespace = trailing-space,space-before-tab,blank-at-eof
    trustctime = false
    precomposeunicode = false

[commit]
    gpgsign = true
    template = ~/.gitmessage

[push]
    default = nothing

[pull]
    rebase = true

[rebase]
    autosquash = true

[merge]
    summary = true
    log = true
    ff = false
    conflictstyle = diff3
    tool = fugitive

[mergetool "vimdiff"]
    prompt = false

[mergetool "fugitive"]
    prompt = false
    cmd = nvim -f -c \"Gvdiff\" \"$MERGED\"

[diff]
    tool = vimdiff
    renames = copies

[difftool "vimdiff"]
    prompt = false
    cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[log]
    abbrevCommit = true
    decorate = short
    date = local

[advice]
    statusHints = false

[help]
    autocorrect = 1

[color]
    ui = true

[apply]
    whitespace = fix

[alias]
    edit = config --global -e

    s = status -s -u
    ignored = status -s --ignored

    d = diff
    staged = diff --staged
    dt = difftool
    dtc = difftool --cached
    dts = difftool --staged
    last = diff --color-words -R HEAD..HEAD^

    c = commit
    amend = commit --amend

    a = add
    patch = add --patch
    statch = stash --patch

    b = branch
    branches = branch -a
    delete = branch -d

    co = checkout
    new = checkout -b
    discard = checkout --

    cp = cherry-pick -x

    compare = diff master..HEAD
    changes = diff --stat

    f = fetch
    fa = fetch --all

    grep-group = grep --break --heading --line-number

    l = log --graph --pretty=format:'%Cgreen%h%Creset %<(50,trunc)%s  %cn %ar'
    ll = log --unified
    lc = log --graph --name-status
    local = log --branches --not --remotes
    file-added = log --diff-filter=A
    file-log = log -u
    overview = log --graph -10 --branches --remotes --tags --pretty=format:'%Cgreen%h%Creset %<(50,trunc)%s  %cn %ar' --date-order
    unmerged = log --no-merges master..

    m = merge
    mt = mergetool

    pl = pull
    pla = pull --all

    p = push

    rb = rebase
    rbi = rebase --interactive

    r = remote

    re = reset
    forgive = revert -n HEAD --
    unstage = reset -q HEAD --
    uncommit = reset --mixed HEAD~

    t = tag -n

[url "git@github.com:"]
    insteadOf = "gh:"
    insteadOf = "github:"
    pushInsteadOf = "https://github.com/"

[github]
    user = sebastianmarkow

[ghq]
    root = ~/Developer/repos
    root = ~/Developer/go/src
